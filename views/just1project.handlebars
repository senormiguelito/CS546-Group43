<div class="col-sm-3">
  <div class="project-list-box" id="projects" data-id="{{_id}}">
    <div class="card" style="width: 18rem;">
      {{#if project.image}}
        <img src={{project.image}} class="card-img-top" alt="..." />
      {{else}}
        <img
          src="../public/images/No_Image_Available.jpg"
          class="card-img-top"
          alt="..."
        />
      {{/if}}
      <div class="card-body">
        <h1>{{project.title}}</h1>
        <p class="card-text">{{project.description}}</p>
      </div>
      <div class="comment-box">

        <p id="posterror"></p>
      </div>
    </div>
  </div>
        </div>

<div class="dropdown">
  <button class="dropbtn">Contact:</button>
  <div class="dropdown-content">
    <p>
      {{firstName}}
      {{lastName}}
    </p>
    <br />
    <p>
      {{email}}
    </p>
    <form method="POST" action="/home/messages/">
      <input
        type="text"
        placeholder="Enter your message"
        name="message"
        id="message"
      /><br /><br />
      <input
        type="hidden"
        name="recieverId"
        id="recieverId"
        value="{{senderId}}"
      />
      <input type="submit" value="Send" id="send-btn" />
    </form>
  </div>
</div>
