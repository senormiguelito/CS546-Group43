<div class="page-content page-container" id="page-content">
    <div class="padding">
      <div class="">
        <div class="">
          <div class="card user-card-full">
            <div class="row m-l-0 m-r-0">
              <div class="col-sm-4 bg-c-lite-green user-profile">
                <div class="card-block text-center text-white">
                  <div class="m-b-25">
                    <img src={{user.imageData}} class="img-radius"
                      alt="User-Profile-Image"  width="200" height="200">
                  </div>
                  <h6 class="f-w-600">{{user.firstName}} {{user.lastName}}</h6>
                  <p>{{user.role}}</p>
                  <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                </div>
              </div>
              <div class="col-sm-8">
                <div class="card-block">
                  <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                  <div class="row">
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">Name:</h5>
                      <h6 class="text-muted f-w-400">{{user.firstName}} {{user.lastName}}</h6>
                    </div>
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">Email:</h5>
                      <h6 class="text-muted f-w-400">{{user.emailAddress}}</h6>
                    </div>
                   
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">Phone Number:</h5>
                      <h6 class="text-muted f-w-400">{{user.phoneNumber}}</h6>
                    </div>
                  </div>
                </div>

                <div class="card-block">
                  <h6 class="m-b-20 p-b-5 b-b-default f-w-600"></h6>
                  <div class="row">
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">Role:</h5>
                      <h6 class="text-muted f-w-400">{{user.role}}</h6>
                    </div>
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">Bio</h5>
                      <h6 class="text-muted f-w-400">{{user.bio}}</h6>
                    </div>
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">Joining Date:</h5>
                      <h6 class="text-muted f-w-400">{{user.joiningDate}}</h6>
                    </div>
                  </div>
                </div>

                <div class="card-block">
                  <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Location</h6>
                  <div class="row">
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">City:</h5>
                      <h6 class="text-muted f-w-400">{{user.location_city}}</h6>
                    </div>
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">State:</h5>
                      <h6 class="text-muted f-w-400">{{user.location_state}}</h6>
                    </div>
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600">Zipcode:</h5>
                      <h6 class="text-muted f-w-400">{{user.location_zip_code}}</h6>
                    </div>
                  </div>
                </div>

                <div class="card-block">
                  <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Categories</h6>
                  <div class="row">
                    <div class="col-sm-3">
                      <h5 class="m-b-10 f-w-600"></h5>
                      <h6 class="text-muted f-w-400">{{user.categories}}</h6>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      

  <div class="dropdown">
  <button class="dropbtn">Contact</button>
  <div class="dropdown-content">
     <form method = "POST" action ='/home/messages/'>
        <input type="text" placeholder="Enter your message" name = "message" id = "message"><br><br>
        <input type="hidden" name = "recieverId" id = "recieverId" value = "{{senderId}}">
        <input type="submit" value="Send" id = "send-btn">
      </form>
  </div>
</div>
