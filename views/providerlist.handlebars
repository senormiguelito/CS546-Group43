<section id="playgrounds" class="my-4">
   
    <div class="container">
         <h2>Job Provider</h2>

        <p>{{error}}</p>
        <div class="row">
            {{#if userList}}
                {{#each userList}}
            <div class="col-sm-3 ">
                <div class="card" style="width: 18rem;">
                    {{#if imageData}}
                    <img src="{{imageData}}" class="card-img-top" alt="...">
                      {{else}}
                      <img src="/public/images/No_Image_Available.jpg" class="card-img-top" alt="...">
                      {{/if}} 
                    <div class="card-body">
                        <h2 card-title>{{firstName}} {{lastName}}</h2>
                            <p class="card-text">{{location_city}}, {{location_state}}</p>
                            <p><a href="/profile/{{_id}}" class="btn btn-primary">View {{firstName}}'s profile!</a></p>
                    </div>
                </div>
            </div>
            {{/each}}
            {{/if}}
            

        </div>
    </div>
</section>