<div class="me-mb-3">
  <a href="/post/newPost/createPost" class="btn btn-primary" id="createPost">Create a job
    posting!</a>

</div>
<br />
{{#if Error}} <p class="alert alert-danger">{{Error}}</p>{{/if}}
{{#if Message}}<p
    class="alert alert-success"
    id="success"
  >{{Message}}</p>{{/if}}
  <h1 class="mb-3">Here are all the posts you've shared with your community!</h1>
<div class="row">
  {{#if posts}}
    {{#each posts}}
      <div class="col-sm-3">
        <div class="col-sm-3" id="myposts" data-id="{{_id}}">
          <div class="card" style="width: 18rem;">
            {{#if images}}
              <img src={{images}} class="card-img-top" alt="..." />
            {{else}}
              <img
                src="../public/images/No_Image_Available.jpg"
                class="card-img-top"
                alt="..."
              />
            {{/if}}
            <div class="card-body">
              <h2>{{title}}</h2>
              <p class="card-text">{{description}}</p>
            </div>
          </div>
          {{#if comment}}
            <div class="post-comment">
              <p>comment : {{comment}}</p>
            </div>
          {{/if}}
        </div>
        {{! <a href="#myModal"><button class="delete"> Delete </button></a> }}
        <button id="myBtn" data-id="{{_id}}"><a
            href="/post/{{_id}}/delete"
          >Delete</a></button>

        <div id="myModal" class="modal">
          <form class="modal-content" action="/action_page.php">
            <span class="close">&times;</span>
            <div class="container">
              <h1>Delete Post</h1>
              <p>Are you sure you want to delete this post?</p>
              <div class="clearfix">
                <button type="button" class="cancelbtn">Cancel</button>
                <button type="button" class="deletebtn">
                  Delete</button>
              </div>
            </div>
          </form>
        </div>

      </div>

    {{/each}}
  {{/if}}
</div>